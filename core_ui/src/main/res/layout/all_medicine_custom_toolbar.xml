<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    app:contentInsetStart="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:background="@null"
            android:id="@+id/all_medicine_back_button"
            android:src="@drawable/ic_arrow_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_width="0dp"
            android:background="@drawable/search_bar_round_corners"
            app:searchIcon="@drawable/ic_loupe_grey"
            android:layout_height="44dp"
            app:queryHint="@string/search_title"
            app:layout_constraintStart_toEndOf="@id/all_medicine_back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>